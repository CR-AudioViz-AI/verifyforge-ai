# VerifyForge AI - Environment Variables Template
# Copy this file to .env.local and fill in your values

# ==============================================
# Supabase Configuration
# ==============================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database connection string (for migrations)
SUPABASE_CONNECTION_STRING=postgresql://postgres:[password]@db.[project].supabase.co:5432/postgres

# ==============================================
# Stripe Configuration (Billing)
# ==============================================
# Get these from: https://dashboard.stripe.com/apikeys

NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx

# Price IDs for subscription tiers
# Create these in Stripe Dashboard → Products
NEXT_PUBLIC_STRIPE_PRO_PRICE_ID=price_xxxxx_monthly
NEXT_PUBLIC_STRIPE_PRO_YEARLY_PRICE_ID=price_xxxxx_yearly

# Webhook signing secret
# Get from: Stripe Dashboard → Webhooks
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# ==============================================
# OpenAI Configuration (for Javari Auto-Fix)
# ==============================================
# Get from: https://platform.openai.com/api-keys

OPENAI_API_KEY=sk-xxxxx

# ==============================================
# Application URLs
# ==============================================

# Your production domain
NEXT_PUBLIC_APP_URL=https://verifyforge.craudiovizai.com

# For local development
# NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==============================================
# Email Configuration (Optional)
# ==============================================
# For sending notifications and invitations

# Using SendGrid
SENDGRID_API_KEY=SG.xxxxx
SENDGRID_FROM_EMAIL=noreply@craudiovizai.com

# Or using AWS SES
# AWS_ACCESS_KEY_ID=xxxxx
# AWS_SECRET_ACCESS_KEY=xxxxx
# AWS_REGION=us-east-1
# AWS_SES_FROM_EMAIL=noreply@craudiovizai.com

# ==============================================
# Testing Configuration
# ==============================================

# Set to 'true' to enable test mode (no actual charges)
TEST_MODE=false

# Set to 'true' to bypass usage limits (for testing)
BYPASS_LIMITS=false

# ==============================================
# Security
# ==============================================

# JWT secret for API key generation (generate random string)
JWT_SECRET=your-very-long-random-secret-here

# Session secret
SESSION_SECRET=another-very-long-random-secret

# ==============================================
# Feature Flags (Optional)
# ==============================================

# Enable/disable specific features
ENABLE_JAVARI_AUTOFIX=true
ENABLE_ECONOMY_MODE=true
ENABLE_SCHEDULED_TESTS=true
ENABLE_API_ACCESS=true
ENABLE_WEBHOOKS=true

# ==============================================
# Monitoring & Analytics (Optional)
# ==============================================

# Sentry (Error tracking)
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Google Analytics
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# PostHog (Product analytics)
# NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxx
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ==============================================
# Development Only
# ==============================================

# Enable detailed logging in development
DEBUG=false

# Show detailed error messages
SHOW_ERROR_DETAILS=false
